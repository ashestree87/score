<footer class="bg-white border-t border-gray-200 py-8 mt-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and description -->
      <div class="col-span-1 md:col-span-2">
        <a href="/" class="text-primary font-bold text-xl flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          Quiz Funnel
        </a>
        <p class="text-gray-600 mt-4 text-sm">
          Discover the perfect solutions tailored to your specific needs through our interactive quizzes.
        </p>
      </div>
      
      <!-- Quick links -->
      <div>
        <h3 class="text-gray-900 font-medium mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {footerLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-primary text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Social links -->
      <div>
        <h3 class="text-gray-900 font-medium mb-4">Connect With Us</h3>
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              class="text-gray-600 hover:text-primary"
              aria-label={`Follow us on ${social.name}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
        <div class="mt-4">
          <p class="text-gray-600 text-sm">
            Email: <a href="mailto:info@quizfunnel.com" class="text-primary hover:underline">info@quizfunnel.com</a>
          </p>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-200 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-600 text-sm">
        &copy; {currentYear} Quiz Funnel. All rights reserved.
      </p>
      <p class="text-gray-600 text-sm mt-2 md:mt-0">
        Designed and developed with ❤️
      </p>
    </div>
  </div>
</footer> 